{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@byzanteam/tsconfig/vue",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": [
    ".jet/**/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // @if auto-import
    ".typings/**/*.d.ts",
    ".typings/**/*.ts"
    // @endif
  ]
}
