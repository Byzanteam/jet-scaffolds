{
  "engineStrict": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue src",
    "lint:fix": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue --fix src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": "eslint --fix"
  },
  "type": "module",
  "dependencies": {
    // @if i18n
    "i18next": "~22.4.9",
    "i18next-vue": "~2.1.1",
    // @endif
    "vue": "~3.4.x",
    // @if router
    "vue-router": "~4.2.x"
    // @endif
  },
  "devDependencies": {
    "@byzanteam/eslint-config-vue-ts": "^4.1.x",
    "@byzanteam/tsconfig": "^3.0.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.11.8",
    "@vitejs/plugin-vue": "^4.5.x",
    "vite": "^5.0.x",
    "vue-tsc": "^1.8.3",
    "eslint": "^8.56.x",
    "typescript": "^5.0.x",
    // @if sass || tailwindcss
    "autoprefixer": "^10.4.13",
    // @endif
    // @if sass || tailwindcss
    "postcss": "^8.4.21",
    // @endif
    // @if tailwindcss
    "prettier-plugin-tailwindcss": "^0.5.x",
    // @endif
    // @if sass
    "sass": "^1.58.0",
    // @endif
    // @if tailwindcss
    "tailwindcss": "^3.2.4",
    // @endif
    // @if auto-import
    "unplugin-auto-import": "^0.13.0",
    "unplugin-vue-components": "^0.23.0",
    // @endif
    // @if router
    "vite-plugin-pages": "^0.28.0"
    // @endif
  }
}
