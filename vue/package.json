{
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue src",
    "lint:fix": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue --fix src",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": "eslint --fix"
  },
  "dependencies": {
    "vue": "^3.2.41",
    // @if router
    "vue-router": "^4.1.6",
    "vite-plugin-pages": "^0.28.0"
    // @endif
  },
  "devDependencies": {
    "@byzanteam/eslint-config-vue": "^4.0.0",
    "@byzanteam/eslint-config-vue-ts": "^1.0.0",
    "@byzanteam/tsconfig": "^1.0.0",
    "@types/node": "^18.11.8",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    // @if sass || tailwindcss
    "autoprefixer": "^10.4.13",
    // @endif
    "eslint": "^8.26.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    // @if sass || tailwindcss
    "postcss": "^8.4.21",
    // @endif
    // @if sass
    "sass": "^1.58.0",
    // @endif
    // @if tailwindcss
    "tailwindcss": "^3.2.4",
    // @endif
    "typescript": "^4.8.4",
    // @if auto-import
    "unplugin-auto-import": "^0.13.0",
    "unplugin-vue-components": "^0.23.0",
    // @endif
    "vite": "^3.2.0",
    "vue-tsc": "^1.0.9"
  }
}
