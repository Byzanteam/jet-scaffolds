{
  "engineStrict": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue src",
    "lint:fix": "vue-tsc --noEmit && eslint --ext .js,.ts,.vue --fix src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": "eslint --fix"
  },
  "dependencies": {
    // @if i18n
    "i18next": "^22.4.9",
    "i18next-vue": "^2.1.1",
    // @endif
    "vue": "^3.2.41",
    // @if router
    "vue-router": "^4.1.6"
    // @endif
  },
  "devDependencies": {
    "@byzanteam/eslint-config-vue-ts": "latest",
    "@byzanteam/tsconfig": "latest",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.11.8",
    "@vitejs/plugin-vue": "^3.2.0",
    // @if sass || tailwindcss
    "autoprefixer": "^10.4.13",
    // @endif
    "eslint": "^8.26.0",
    // @if sass || tailwindcss
    "postcss": "^8.4.21",
    // @endif
    // @if sass
    "sass": "^1.58.0",
    // @endif
    // @if tailwindcss
    "tailwindcss": "^3.2.4",
    // @endif
    "typescript": "^4.8.4",
    // @if auto-import
    "unplugin-auto-import": "^0.13.0",
    "unplugin-vue-components": "^0.23.0",
    // @endif
    "vite": "^3.2.0",
    // @if router
    "vite-plugin-pages": "^0.28.0",
    // @endif
    "vue-tsc": "^1.0.9"
  }
}
