{
  "extends": "@byzanteam/tsconfig/tsconfig.vue.json",
  "compilerOptions": {
    "target": "es2017",
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
